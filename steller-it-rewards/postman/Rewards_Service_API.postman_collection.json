{
	"info": {
		"_postman_id": "rewards-service-api",
		"name": "Rewards Service API",
		"description": "Collection of API endpoints for the Rewards Service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/health",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"actuator",
								"health"
							]
						},
						"description": "Health check endpoint to verify service is running"
					},
					"response": []
				}
			]
		},
		{
			"name": "Customers",
